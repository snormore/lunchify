<%= form_for(@food_item) do |f| %>
<div class="form">

  <%= render 'error_messages' %>
    <div class="form-group">
      <%= f.text_field :name, {placeholder: "Food Item", class:"form-control"} %>
    </div>
    <div class="form-group">
      <%= f.text_area(:description, {rows: 6, placeholder: "Description", class:"form-control"}) %>
    </div>

    <br>
    <%= f.submit "Submit" , class: "btn btn-primary" %>
   
  <% end %>

</div>