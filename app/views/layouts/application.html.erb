<!DOCTYPE html>
<html>
  <head>
    <title>Lunchify</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, "#{value}<button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>".html_safe, class: "alert alert-#{key} container alert-dismissable") %>    
    <% end %>
  <%= yield %>

  </body>
</html>
